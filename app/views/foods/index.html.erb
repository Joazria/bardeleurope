  <% @foods.each do |food| %>
    <% if user_signed_in?  %>
          <div class="card-product m-2">
            <%= image_tag food.photo ,  class: "card-product__img", alt: "Card image cap" %>
            <div class="card-product__infos">
              <h5 class="card-product__title"><%= food.name %></h5>
                <p class="card-product__description"><%= food.description %></p>
                <p class="card-product__price"><small class="text-muted">  € <%= food.price %> </small></p>
                <%= link_to "edit", edit_food_path(food), class: "btn btn-sm btn-outline-primary"  %>
              </div>
          </div>

    <% else %>
          <div class="card-product m-2">
            <%= image_tag food.photo ,  class: "card-product__img", alt: "Card image cap" %>
            <div class="card-product__infos">
              <h5 class="card-product__title"><%= food.name %></h5>
                <p class="card-product__description"><%= food.description %></p>
                <p class="card-product__price"><small class="text-muted">  € <%= food.price %> </small></p>
            </div>
          </div>
        <% end %>
  <% end %>
<!-- depending on local time, it will render a specific partial -->
<% if DateTime.now >= Time.parse("15:00") && DateTime.now <= Date.today + 26.hours %>
  <%= render 'shared/night_categories' %>
<% elsif DateTime.now >= Time.parse("11:00") && DateTime.now < Time.parse("15:00")%>
  <%= render 'shared/midday_categories' %>
<% else %>
  <%= render 'shared/morning_categories' %>
<% end %>

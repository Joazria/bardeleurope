<section class="categories">
  <% if DateTime.now >= Time.parse("14:00") && DateTime.now <= Date.today + 25.hours %>
    <%= render 'shared/night_categories' %>
  <% elsif DateTime.now >= Time.parse("10:00") && DateTime.now < Time.parse("15:00")%>
    <%= render 'shared/midday_categories' %>
  <% else %>
    <%= render 'shared/morning_categories' %>
  <% end %>
</section>


<% @icecreams.each do |icecream| %>
  <% if user_signed_in?  %>
      <div class="card-product">
        <%= image_tag icecream.photo ,  class: "card-product__img", alt: "Card image cap" %>
        <div class="card-product__infos">
          <h5 class="card-product__title"><%= icecream.name %></h5>
          <p class="card-product__description"><%= icecream.description %></p>
          <p class="card-product__price"><small class="text-muted">  € <%= icecream.price %> </small></p>
          <%= link_to "edit", edit_icecream_path(icecream), class: "btn btn-sm btn-outline-primary"  %>
        </div>
      </div>

  <% else %>
    <div class="card-product">
      <%= image_tag icecream.photo ,  class: "card-product__img", alt: "Card image cap" %>
      <div class="card-product__infos">
        <h5 class="card-product__title"><%= icecream.name %></h5>
        <p class="card-product__description"><%= icecream.description %></p>
        <p class="card-product__price"><small class="text-muted">  € <%= icecream.price %> </small></p>
      </div>
    </div>
  <% end %>
<% end %>